@model IEnumerable<MyCMS.Models.Orders>
    

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Message</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cust.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.menu.FoodName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vend.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalBill)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cust.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.menu.FoodName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vend.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalBill)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>

            @Html.ActionLink("CANCEL", "Delete", new { id=item.OrdId })
        </td>
    </tr>
}

</table>


